#!/bin/bash -x

# Runs a command using WORKSPACE's

if [ $# -ne 1 ]
then
  echo "USAGE: $0 COMMAND"
  exit 1
fi

if [ -z "${WORKSPACE}" ]
then
  echo "WORKSPACE must be set"
  exit 1
fi

if [ -z "${GIT_COMMIT}" ]
then
  echo "GIT_COMMIT must be set"
  exit 1
fi

[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"

cd ${WORKSPACE} && $1